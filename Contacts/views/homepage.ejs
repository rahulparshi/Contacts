<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>CSS Only Lightbox / Popup</title>
        <link href="/popup.css" rel="stylesheet" type="text/css" />
        <script src="../js/popup.js"></script>
    </head>
    <body>

        <!-- popup code -->
        <div id="xmas-popup" class="popup" href="#">
            <div class="popup-content">
              <!--  <img src="popup.jpg" alt="xmas-sale" />  -->
                <span>ContactName:</span>
                <input type="text" name="" value="" id="create-contact-name">
                <br>
                <span>PhoneNumber:</span>
                <input type="text" name="" value="" id="create-phone-number">
                <br>
                <input type="button" name="" value="Create" onclick="push()">
                <a href="#" class="close">x</a>
            </div>
        </div>

        <!-- normal page code -->
        <div class="wrapper">
            <h1>CSS Only Popup</h1>
            <p>
                home page of search
            </p>
            <span><a href="#xmas-popup" class="button">Show popup</a></span>
            <form class="" action="/search" method="post">
              <input type="text" name="username" value="">
              <input type="submit" name="" value="search">
            </form>
            <ul>
               <% for(var i=0; i< results.length; i++){ %>
                   <li><%= results[i].username =%> </li>

                   <li><%= results[i].password =%> </li>

             <%  } %>
           </ul>
            </div>

    </body>
</html>
